@model Usuario

<h1>ALERTA</h1>
<h2>Tem certeza que deseja excluir o usuário @Model.Nome (@Model.Login)?</h2>
<p>A exclusão é irreversivel</p>

<form action="ExcluirUsuario" method="post">
    <input type="hidden" name="Id" value="@Model.Id">

    <input type="decisao" type="submit" value="CANCELAR">
    <input type="decisao" type="submit" value="EXCLUIR">
</form>